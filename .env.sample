# Vinyl Vault Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
# IMPORTANT: In production, BFF and Backend use SEPARATE MongoDB instances.
# The BFF MongoDB stores ONLY session data.
# The Backend MongoDB stores all domain data (users, records, releases).

# BFF MongoDB - Session storage only
# Used by: packages/bff (connect-mongo session store)
MONGODB_URI=mongodb://localhost:27017/vinylvault-sessions

# Backend MongoDB - Domain data (users, records, releases)
# Used by: packages/backend
BACKEND_MONGODB_URI=mongodb://localhost:27017/vinylvault

# =============================================================================
# GITHUB OAUTH
# =============================================================================
# Create an OAuth App at: https://github.com/settings/applications/new
# See docs/GITHUB_OAUTH_SETUP.md for detailed instructions

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback

# =============================================================================
# SECURITY SECRETS
# =============================================================================
# Generate secure random secrets with:
#   node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"

# JWT secret for BFF-to-Backend communication
JWT_SECRET=your_jwt_secret_min_32_chars

# Session secret for express-session
SESSION_SECRET=your_session_secret_min_32_chars

# JWT expiration time (default: 15 minutes)
JWT_EXPIRES_IN=15m

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# EXTERNAL MUSIC APIS (optional)
# =============================================================================
# Discogs API credentials (https://www.discogs.com/settings/developers)
DISCOGS_API_KEY=your_discogs_consumer_key
DISCOGS_API_SECRET=your_discogs_consumer_secret

# MusicBrainz User-Agent (required for API access)
# Format: AppName/Version (contact-email)
MUSICBRAINZ_USER_AGENT=VinylVault/1.0 (your-email@example.com)
